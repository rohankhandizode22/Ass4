{{> menu-nav}}

<div class="container">
    {{#if flag}}
    <div class="alert alert-danger" role="alert">
        <h4>Invalid Credit Card Number</h4>
    </div>
    {{/if}}
    <h1 class="mt-3">Checkout</h1>
    <form action="/menu/credit-action" method="post">
        <div class="mt-2">
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">
                    <h6>Credit Card</h6>
                </label>
                <input name="creditNum" type="text" class="form-control" id="exampleInputPassword1">
                <h6 class="mt-2">Order Total <b><span id="totalPrice"></span></b></h6>
                <button type="submit" class="btn btn-dark mt-1">Checkout</button>
            </div>
        </div>
    </form>
</div>

<script>
    document.getElementById('totalPrice').innerHTML = '$' + localStorage.getItem('totalPrice');
</script>